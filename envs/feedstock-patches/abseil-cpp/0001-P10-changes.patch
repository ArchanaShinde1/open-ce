From: ArchanaShinde1 <archana.shinde2504@gmail.com>
Date: Thu, 1 Feb 2024 13:29:01 +0000
Subject: [PATCH] P10 changes

---
 recipe/build-abseil.sh | 19 +++++++++++++++++++
 recipe/meta.yaml       | 11 ++++++++---
 2 files changed, 27 insertions(+), 3 deletions(-)

diff --git a/recipe/build-abseil.sh b/recipe/build-abseil.sh
index 041a9c2..3ec612c 100644
--- a/recipe/build-abseil.sh
+++ b/recipe/build-abseil.sh
@@ -5,10 +5,29 @@ set -exuo pipefail
 mkdir -p build
 cd build
 
+if [[ $ppc_arch == "p10" ]]
+then
+    if [[ -z "${GCC_HOME}" ]];
+    then
+        echo "Please set GCC_HOME to the install path of gcc-toolset-12"
+        exit 1
+    else
+        export PATH=$GCC_HOME/bin:$PATH
+        export CC=$GCC_HOME/bin/gcc
+        export CXX=$GCC_HOME/bin/g++
+        export BAZEL_LINKLIBS=-l%:libstdc++.a
+        if [[ -z "${CMAKE_ARGS+x}" ]];
+        then
+            CMAKE_ARGS=""
+        fi
+    fi
+fi
+
 cmake ${CMAKE_ARGS} \
     -DCMAKE_BUILD_TYPE=Release \
     -DCMAKE_CXX_STANDARD=17 \
     -DCMAKE_INSTALL_LIBDIR=lib \
+    -DCMAKE_INSTALL_PREFIX=${PREFIX} \
     -DCMAKE_PREFIX_PATH=${PREFIX} \
     -DBUILD_SHARED_LIBS=ON \
     -DABSL_PROPAGATE_CXX_STD=ON \
diff --git a/recipe/meta.yaml b/recipe/meta.yaml
index 9ae57dc..cc509db 100644
--- a/recipe/meta.yaml
+++ b/recipe/meta.yaml
@@ -41,6 +41,9 @@ source:
 
 build:
   number: 1
+  script_env:
+    - CMAKE_ARGS
+    - GCC_HOME
 
 outputs:
   # default behaviour is shared; however note that upstream does not support
@@ -50,13 +53,15 @@ outputs:
     script: build-abseil.bat  # [win]
     build:
       string: cxx{{ cxx_standard }}_h{{ PKG_HASH }}_{{ PKG_BUILDNUM }}
+      script_env:
+        - GCC_HOME             #[ppc_arch == 'p10']
       run_exports:
         - libabseil ={{ version }}=cxx{{ cxx_standard }}*
 
     requirements:
       build:
-        - {{ compiler('c') }}
-        - {{ compiler('cxx') }}
+        - {{ compiler('c') }}       #[ppc_arch != "p10"]
+        - {{ compiler('cxx') }}     #[ppc_arch != "p10"]
         - cmake
         - ninja
       run_constrained:
@@ -66,7 +71,7 @@ outputs:
 
     test:
       requires:
-        - {{ compiler('cxx') }}
+        - {{ compiler('cxx') }}    #[ppc_arch != "p10"]
         - cmake
         - ninja
         - pkg-config
